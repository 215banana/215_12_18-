  <style>
    :root {
      --bg-color: #e0f7fa;
    }
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: var(--bg-color);
      text-align: center;
    }
    .container {
      max-width: 500px;
      margin: auto;
